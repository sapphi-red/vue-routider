{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "/@/*": [
        "src/*"
      ]
    }
  }
}
